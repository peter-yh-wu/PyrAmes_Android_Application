<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.peterwu.pyrames_android_application.MainActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintLeft_toLeftOf="@id/activity_main"
        app:layout_constraintBottom_toBottomOf="@id/activity_main"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/buttonPopUp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Find Device"
        app:layout_constraintBottom_toBottomOf="@id/activity_main"
        app:layout_constraintRight_toRightOf="@id/activity_main"
        android:layout_marginTop="8dp" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph1"
        android:layout_width="500dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        app:layout_constraintRight_toRightOf="@+id/activity_main" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph2"
        android:layout_width="500dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/graph1"
        app:layout_constraintRight_toRightOf="@+id/activity_main" />|

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph3"
        android:layout_width="500dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/graph2"
        app:layout_constraintRight_toRightOf="@+id/graph2" />|

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph4"
        android:layout_width="500dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/graph3"
        app:layout_constraintRight_toRightOf="@+id/activity_main" />|

    <Button
        android:id="@+id/button1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Higher"
        app:layout_constraintTop_toTopOf="@+id/graph1"
        app:layout_constraintRight_toLeftOf="@+id/graph1" />

    <Button
        android:id="@+id/button2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Lower"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/graph1" />

    <Button
        android:id="@+id/button3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Higher"
        app:layout_constraintTop_toTopOf="@+id/graph2"
        app:layout_constraintRight_toLeftOf="@+id/graph2" />

    <Button
        android:id="@+id/button4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Lower"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/button3" />

    <Button
        android:id="@+id/button5"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Higher"
        app:layout_constraintTop_toTopOf="@+id/graph3"
        app:layout_constraintRight_toLeftOf="@+id/graph3" />

    <Button
        android:id="@+id/button6"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Lower"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/button5" />

    <Button
        android:id="@+id/button7"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Higher"
        app:layout_constraintTop_toTopOf="@+id/graph4"
        app:layout_constraintRight_toLeftOf="@+id/graph4" />

    <Button
        android:id="@+id/button8"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Lower"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/button7" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        app:relativeBegin="0dp" />

    <!--

    <com.jjoe64.graphview.helper.GraphViewXML
        android:id="@+id/gv1"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:seriesData="0=5;2=5;3=0;4=2"
        app:seriesType="line"
        app:seriesColor="#ee0000"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toTopOf="@+id/activity_main" />

    -->

</android.support.constraint.ConstraintLayout>
