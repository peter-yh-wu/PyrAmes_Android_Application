<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.peterwu.pyrames_android_application.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button1"
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:text="Higher"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/button2"
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:text="Lower"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/button3"
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:text="Higher"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/button4"
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:text="Lower"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/button5"
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:text="Higher"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/button6"
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:text="Lower"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/button7"
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:text="Higher"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/button8"
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:text="Lower"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graph1"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graph2"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>|

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graph3"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>|

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graph4"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>|

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonPopUp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Find Device"/>

            <Button
                android:id="@+id/buttonStream"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Stream"/>

            <Button
                android:id="@+id/buttonAutoScale"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Auto-Scale Is Off"/>

            <Button
                android:id="@+id/buttonUpload"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Upload"/>

        </LinearLayout>

    </LinearLayout>

    <!--

